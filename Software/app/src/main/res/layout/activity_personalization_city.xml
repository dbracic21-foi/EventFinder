<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_login"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="#2196F3"/>

    <!-- Linija ispod "Event Finder" -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="70dp">
        <TextView
            android:id="@+id/textCitiesPersonalization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personalizaion"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="#2196F3"/>

        <Button
            android:id="@+id/buttonZagreb"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Zagreb"
            android:textSize="36sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonSplit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Split"
            android:textSize="36sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonOsijek"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Osijek"
            android:textSize="36sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonRijeka"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Rijeka"
            android:textSize="36sp"
            android:gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>